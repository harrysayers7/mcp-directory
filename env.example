# MCP Directory Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT tokens and encryption
SECRET_KEY=your-secret-key-here-change-in-production

# JWT token expiration (in seconds)
JWT_EXPIRATION=3600

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database URL
DATABASE_URL=postgresql://user:password@localhost:5432/mcp_directory

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching and session storage
REDIS_URL=redis://localhost:6379/0

# Redis connection pool settings
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# NOTION SERVER CONFIGURATION
# =============================================================================

# Notion API configuration
NOTION_API_KEY=your-notion-api-key-here
NOTION_API_VERSION=2022-06-28
NOTION_BASE_URL=https://api.notion.com/v1

# Notion rate limiting
NOTION_RATE_LIMIT=3
NOTION_RATE_LIMIT_WINDOW=1

# =============================================================================
# GITHUB SERVER CONFIGURATION
# =============================================================================

# GitHub API configuration
GITHUB_TOKEN=your-github-token-here
GITHUB_API_URL=https://api.github.com
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY_PATH=./github-private-key.pem

# GitHub rate limiting
GITHUB_RATE_LIMIT=5000
GITHUB_RATE_LIMIT_WINDOW=3600

# =============================================================================
# SUPABASE SERVER CONFIGURATION
# =============================================================================

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase realtime configuration
SUPABASE_REALTIME_URL=wss://your-project.supabase.co/realtime/v1
SUPABASE_REALTIME_API_KEY=your-supabase-anon-key

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Prometheus metrics endpoint
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker registry configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_NAMESPACE=mcp-directory

# Docker image tags
DOCKER_TAG_LATEST=latest
DOCKER_TAG_VERSION=0.1.0

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub Actions secrets
GITHUB_TOKEN_CI=your-github-token-for-ci
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Deployment configuration
DEPLOYMENT_ENVIRONMENT=staging
DEPLOYMENT_REGION=us-west-2

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email service configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Webhook configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development server settings
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=8000
DEV_SERVER_RELOAD=true

# Test configuration
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/mcp_directory_test
TEST_REDIS_URL=redis://localhost:6379/1

# Mock external services in tests
MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Uncomment and configure for production
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# SECRET_KEY=your-production-secret-key
# DATABASE_URL=postgresql://prod-user:prod-password@prod-host:5432/mcp_directory_prod
# REDIS_URL=redis://prod-redis:6379/0
# SENTRY_DSN=your-production-sentry-dsn
