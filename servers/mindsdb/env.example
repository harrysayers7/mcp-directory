# MindsDB Configuration
MINDSDB_API_KEY=your-mindsdb-api-key-here
MINDSDB_HOST=https://cloud.mindsdb.com
MINDSDB_PORT=47334

# MCP Server Configuration
MCP_SERVER_NAME=mindsdb
MCP_SERVER_VERSION=0.1.0

# Performance Settings
MAX_CONNECTIONS=10
QUERY_TIMEOUT=300
CACHE_TTL=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Settings
ENABLE_AUTH=true
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# For local MindsDB development
MINDSDB_MCP_ACCESS_TOKEN=dev-token
